FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 600;

boundaryField
{
    inlet
    {
        type             cyclic;
        value            $internalField;
    }
    bottom
    {
        type             fixedValue;
        gradient         $internalField;
    }
    outlet
    {
        type             cyclic;
        value            $internalField;
    }
    top
    {
        type             fixedValue;
        gradient         $internalField;
    }
    frontAndBack
    {
        type             empty;
    }
}

