FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p_rgh
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0.00;
    }




    "(U|T|T[0-9]+|k|omega|epsilon|epsilont|kt|h)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          0.0;
        minIter         1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       1e5;

    residualControl
    {
       
        U               1e-5;
        h               1e-7;
        "T[0-9]+"       1e-7;
    }
}

relaxationFactors
{
    equations
    {
        U               0.1;
        p_rgh		0.1;
        h               0.3;
        "T[0-9]+"       0.3;
       "(k|R|omega|epsilon)"   0.5;
       "(kt|epsilont)"           0.5;
    }
}
