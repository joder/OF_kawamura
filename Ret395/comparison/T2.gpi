load 'commonT.gpi'

set ylabel 'T^{+} / Pr'
npr=4

temp(i,j)=subst(column(col(i,j)))/prn(j)*(i<4?1:-1)

set output 'comp_T2.png'
plot\
  KT2 u 2:($3/prn(npr)) w @wDNS t 'Kawamura' ls lsDNS \
, for [i=1:N] srcp(i,npr) u (yp($1)):(temp(i,npr)) w @wMesh t titl(i) ls linstyl(i)

set output 'comp_T2_semilog.png'
set logscale x
plot\
  KT2 u 2:($3/prn(npr)) w @wDNS t 'Kawamura' ls lsDNS \
, for [i=1:N] srcp(i,npr) u (yplog($1)):(temp(i,npr)) w @wMesh t titl(i) ls linstyl(i)

set output 'comp_T2_log.png'
set logscale xy
plot\
  KT2 u 2:($3/prn(npr)) w @wDNS t 'Kawamura' ls lsDNS \
, for [i=1:N] srcp(i,npr) u (yp($1)):(temp(i,npr)) w @wMesh t titl(i) ls linstyl(i)
